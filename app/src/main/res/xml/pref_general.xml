<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/pref_location_label"
        android:defaultValue="@string/pref_location_default_value"
        android:key="@string/pref_location_key"
        android:singleLine="true"
        android:inputType="text">
    </EditTextPreference>

    <ListPreference
        android:title="@string/pref_temperature_label"
        android:key="@string/pref_temperature_key"
        android:defaultValue="@string/pref_temperature_default_value"
        android:entries="@array/pref_temperature_entries"
        android:entryValues="@array/pref_temperature_values"/>

</PreferenceScreen>